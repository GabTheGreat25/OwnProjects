{
  "name": "node-and-fastify-ts",
  "version": "1.0.0",
  "main": "server.js",
  "scripts": {
    "build": "npx tsc && npx copyfiles -u 1 src/views/**/* dist/src",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "npx copyfiles -u 1 src/views/**/* dist/src && npx tsc && node dist/server.js",
    "dev": "npx copyfiles -u 1 src/views/**/* dist/src && npx tsc --watch && nodemon dist/server.js"
  },
  "author": "GabTheGreat25",
  "license": "ISC",
  "description": "CRUD API with Multiple Images, Authentication and Authorization using Node and Fastify ts",
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/formbody": "^7.4.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/multipart": "^8.2.0",
    "bad-words": "^3.0.4",
    "bcrypt": "^5.1.1",
    "cloudinary": "^2.2.0",
    "dotenv": "^16.4.5",
    "fastify": "^4.27.0",
    "fastify-multer": "^2.0.3",
    "handlebars": "^4.7.8",
    "http-errors": "^2.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.4.1",
    "multer-storage-cloudinary": "^4.0.0",
    "nodemailer": "^6.9.14",
    "typescript": "^5.4.5",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/bad-words": "^3.0.3",
    "@types/bcrypt": "^5.0.2",
    "@types/http-errors": "^2.0.4",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/mongoose": "^5.11.97",
    "@types/nodemailer": "^6.4.15",
    "@types/node": "^20.12.12",
    "@types/uuid": "^9.0.8",
    "concurrently": "^8.2.2",
    "copyfiles": "^2.4.1",
    "nodemon": "^3.1.3",
    "prettier": "^3.3.1",
    "ts-node": "^10.9.2"
  }
}
